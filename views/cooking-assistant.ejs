<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cooking Assistant - <%= recipe.title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" type="text/css" href="/cooking-assistant.css" />
  </head>
  <body>
    <!-- navigation bar -->
    <!-- scroll down for the nav bar to appear -->
    <nav id="navbar" class="navbar navbar-expand-lg navbar-light bg-success">
      <div class="container-fluid">
        <!-- application name -->
        <a class="navbar-brand" href="/general/home-page">
          <img
            src="/assets/feastly2.png"
            alt="feastly logo"
            height="50"
            class="d-inline-block align-text-top"
          />
        </a>
        <!-- when the screen becomes small, the links in the nav bar switches to a button -->
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <!-- navigation links -->
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/general/home-page">Home</a>
            </li>
            <li class="nav-item">
              <form
                action="/accounts/logout"
                method="POST"
                style="display: inline"
              >
                <button type="submit" class="nav-link btn btn-link">
                  Logout
                </button>
              </form>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <h1><%= recipe.title %></h1>

    <div class="recipe-container">
      <img src="<%= recipe.image %>" alt="<%= recipe.title %>" width="300" />
      <a href="/recipes/<%= recipe.id %>/cooking-steps?step=0">
        <button style="height: 40px; margin-left: 20px">Start Cooking</button>
      </a>
    </div>

    <!-- ingredients table-->
    <h2>Ingredients</h2>
    <table>
      <thead>
        <tr>
          <th>Ingredient</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <% ingredients.forEach(ingredient => { %>
        <tr>
          <td><%= ingredient.name %></td>
          <td><%= ingredient.amount %> <%= ingredient.unit %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <br />

    <!-- tools table -->
    <h2>Tools</h2>
    <ul>
      <% tools.forEach(tool => { %>
      <li><%= tool.name %></li>
      <% }) %>
    </ul>

    <br />

    <button class="back-button" onclick="history.back()">Back</button>

    <!-- footer section -->
    <footer class="bg-success-subtle text-center p-3 mt-5">
      <a href="#about-us">About Us</a>
      <p>&copy; 2025 Feastly</p>
    </footer>
  </body>
</html>
