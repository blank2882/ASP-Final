<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Popular Recipes</title>
    <link rel="stylesheet" type="text/css" href="/recipes.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <!-- navigation bar -->
    <!-- scroll down for the nav bar to appear -->
    <nav id="navbar" class="navbar navbar-expand-lg navbar-light bg-success">
      <div class="container-fluid">
        <!-- application name -->
        <a class="navbar-brand" href="/general/home-page">
          <img
            src="/assets/feastly2.png"
            alt="feastly logo"
            height="50"
            class="d-inline-block align-text-top"
          />
        </a>
        <!-- when the screen becomes small, the links in the nav bar switches to a button -->
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <!-- navigation links -->
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/general/home-page">Home</a>
            </li>
            <li class="nav-item">
              <form
                action="/accounts/logout"
                method="POST"
                style="display: inline"
              >
                <button type="submit" class="nav-link btn btn-link">
                  Logout
                </button>
              </form>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="main-page-content">
      <!-- popular recipes -->
      <h1>Top 10 popular recipes</h1>

      <div class="recipe-container">
        <% recipes.forEach(recipe => { %>
        <div class="card">
          <img src="<%= recipe.image %>" alt="<%= recipe.title %>" />
          <div class="container">
            <h4><b><%= recipe.title %></b></h4>
            <p>
              <a href="/recipes/<%= recipe.id %>/cooking-assistant"
                >View recipe</a
              >
            </p>
          </div>
        </div>
        <% }); %>
      </div>

      <br />

      <button class="back-button" onclick="history.back()">Back</button>

      <!-- footer section -->
      <footer class="bg-success-subtle text-center p-3 mt-5">
        <a href="#about-us">About Us</a>
        <p>&copy; 2025 Feastly</p>
      </footer>
    </div>
  </body>
</html>
